@model List<GetAllStudentQueryResult>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    <h5>Öğrenci Listesi</h5>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Öğrenci Adı</th>
            <th>Öğrenci Soyadı</th>
            <th>Öğrencinin Bölümü</th>
            <th>Öğrencinin Şehri</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentID</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Department</td>
                <td>@item.City</td>
                <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-outline-danger">Sil</a></td>
            </tr>
        }
    </table>

    <br />
    <a href="/Student/AddStudent/" class="btn btn-outline-primary">Yeni Öğrenci Girişi</a>
</div>
