@model List<GetAllUniversityQueryResult>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />
    <h5>Üniversite Listesi</h5>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Üniversite</th>
            <th>Şehir</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UniversityID</td>
                <td>@item.Name</td>
                <td>@item.Town</td>
                <td><a href="/University/UpdateUniversity/@item.UniversityID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="/University/DeleteUniversity/@item.UniversityID" class="btn btn-outline-danger">Sil</a></td>
            </tr>
        }
    </table>
    <a href="/University/AddUniversity/" class="btn btn-outline-primary">Yeni Üniversite Girişi</a>
</div>